<section class="author-page">
  <div class="col-md-8 col-centered">
    <div class="col-md-2 text-center"><%= gravatar_for @user, size: 90 %></div>
    <div class="col-md-10 align-left"><h1><%= @user.username %></h1></div>
    <div class="col-md-10 align-left"><p><%= @user.description if @user.description %></p></div>
  </div>
  <div class="greybg">
    <%= render 'articles/article', obj: @user_articles  %>
    <div class="text-center">
        <%= will_paginate @user_articles %>
    </div>
  </div>
</section>
