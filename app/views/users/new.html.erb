<section class="page">
    <div class="center-content">
        <div class="col-md-8">
            <%= simple_form_for @user do |f| %>
              <%= f.input :username %>
              <%= f.input :email %>
              <%= f.input :password %>
              <div class="pull-right"><%= f.button :submit, "Sign up", class: 'btn' %></div>
            <% end %>
        </div>
    </div>
</section>
