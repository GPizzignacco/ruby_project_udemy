<% obj.each do |a| %>
    <div class="col-md-4">
        <div class="post-card sm">
            <%=link_to( image_tag('8.jpg'), article_path(a)) %>
            <h1><%= link_to "#{a.title}", article_path(a) %></h1>
            <p><%= truncate(a.description, length: 100) %></p>
            <div class="article-meta-details">
                <%= link_to user_path(a.user) do %>
                    <%= gravatar_for a.user, size: 25 %>
                    <small><%= a.user.username %>, (<%= time_ago_in_words(a.created_at) %> ago)</small>
                <% end %>
            </div>
            <p>
                <%= link_to 'Edit', edit_article_path(a), class: 'btn' %>
                <%= link_to 'Delete', article_path(a), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn' %>    
            </p>
        </div>
    </div>
<% end %>