<section class="page">
    <div class="container">
      <div class="col-md-12 text-center">
        <h3>Blog</h3>
      </div>
      <% @articles.each do |a| %>
        <div class="col-md-12">
          <h5><%= link_to "#{a.title}", article_path(a) %></h5>
          <p><%= truncate(a.description, length: 100) %></p>
          <div class="article-meta-details">
            <small>Created by: <%= a.user.username if a.user %>, 
                               <%= time_ago_in_words(a.created_at) %> ago,
                   last update: <%= time_ago_in_words(a.updated_at) %> ago
            </small>
          </div>
           <p>
            <%= link_to 'Edit', edit_article_path(a), class: 'btn' %>
            <%= link_to 'Delete', article_path(a), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn' %>    
          </p>
        </div>
      <% end %>
    </div>
</section>


